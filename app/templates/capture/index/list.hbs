> LIST
{{outlet}}

<div class="layout-row layout-align-center-center">
  {{#unless captures}}
    {{#paper-card as |card|}}
      {{card.image src="http://www.fillmurray.com/800/300"
                   alt="fillmurray placeholder"
                   title="fillmurray placeholder"}}

      {{#card.title as |title|}}
        {{#title.text as |text|}}
          {{#text.headline}}No Captures Available{{/text.headline}}
        {{!--{{#text.subhead}}I can see you're new around here, so let me help you{{/text.subhead}}--}}
        {{/title.text}}
      {{/card.title}}

      {{#card.content}}
        <p>
          There are no captures available at the moment. Speaking of moments, why not
          {{link-to 'create one now' 'capture.index.now'}}?
        </p>
      {{/card.content}}

      {{#card.actions}}
        {{#paper-button onClick=(action (transition-to 'capture.index.now'))}}+ Create Moment{{/paper-button}}
      {{/card.actions}}
    {{/paper-card}}
  {{/unless}}

  {{#if captures}}
    {{#each captures as |capture|}}
      <div class="layout-column flex-xs flex-gt-sm-25">
        {{#paper-card as |card|}}
          {{#card.title as |title|}}
            {{#title.text as |text|}}
              {{#text.headline}}Capture Headline{{/text.headline}}
              {{#text.subhead}}Capture subheading{{/text.subhead}}
            {{/title.text}}
          {{/card.title}}

          {{#card.content class="layout-row layout-align-space-between"}}
            {{#card.media size="xl"}}
              <div class="card-media"></div>
            {{/card.media}}
            {{#card.actions class="layout-column"}}
              {{#paper-button iconButton=true}}{{paper-icon "favorite"}}{{/paper-button}}
              {{#paper-button iconButton=true}}{{paper-icon "settings"}}{{/paper-button}}
              {{#paper-button iconButton=true}}{{paper-icon "share"}}{{/paper-button}}
            {{/card.actions}}
          {{/card.content}}
        {{/paper-card}}
      </div>
    {{/each}}
  {{/if}}
</div>

